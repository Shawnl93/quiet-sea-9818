<h1>Plots Index</h1>

<% @plots.each do |plot| %>
  <p>Plot: <%= plot.number %></p>
  <p>Plants- <% plot.plants.each do |plant| %>
  <section id='plants-<%= plant.id %>'><%= plant.name %> <%= link_to "Remove #{plant.name}", "/plots/#{plot.id}/plants/#{plant.id}", method: :delete %></section></p>
  <% end %>
<% end %>
